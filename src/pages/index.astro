---
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html>
  <head>
    <meta charset="utf8" />
    <meta http-equiv="refresh" content={`0;url=${base}fr/`} />
    <script define:vars={{ base }}>
      const lang = navigator.language;
      window.location.replace(
        lang.startsWith("fr") ? base + "fr/" : base + "en/",
      );
    </script>
  </head>
  <body></body>
</html>
