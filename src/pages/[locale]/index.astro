---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Slide from "../../components/Slide.astro";
import Panel from "../../components/Panel.astro";
import TextRotator from "../../components/TextRotator.svelte";
import { t, type Locale } from "../../i18n";

export function getStaticPaths() {
  return [{ params: { locale: "fr" } }, { params: { locale: "en" } }];
}

const locale = Astro.params.locale as Locale;
const tr = t(locale);
const base = import.meta.env.BASE_URL;
---

<BaseLayout title={tr.title} locale={locale}>
  <Slide id="intro" videoSrc={`${base}content/video/party_loop.mp4`}>
    <div class="gui_bottom_center">
      <div class="column flex_center">
        <div class="panel"><h1>Crash Party</h1></div>
        <div class="space"></div>
        <Panel width="800px">
          <p set:html={tr.intro} />
        </Panel>
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>
        <div class="scroll_cursor">
          <a href="#showreel" class="linkless">
            <img
              class="moving_cursor"
              src={`${base}content/image/little_cursor.png`}
            />
          </a>
        </div>
      </div>
    </div>
  </Slide>

  <Slide id="showreel" videoSrc={`${base}content/video/showreel.mp4`}>
    <div class="gui_center">
      <div class="column flex_center">
        <div class="panel self_center">
          <TextRotator
            client:load
            initial={tr.rotatorInitial}
            words={tr.rotatorWords}
            suffix={tr.rotatorSuffix}
          />
        </div>
      </div>
    </div>
    <div class="gui_bottom_center">
      <div class="scroll_cursor">
        <a href="#party" class="linkless">
          <img
            class="moving_cursor"
            src={`${base}content/image/little_cursor.png`}
          />
        </a>
      </div>
    </div>
  </Slide>

  <Slide id="party" videoSrc={`${base}content/video/party.mp4`}>
    <div class="gui_center">
      <div class="column">
        <div class="panel"><h1>{tr.partyTitle} Party</h1></div>
        <div class="space"></div>
        <Panel width="800px">
          <p set:html={tr.partyText} />
        </Panel>
        <div class="space"></div>
        <div class="space"></div>
        <div class="panel self_center"><h2>{tr.musicalArtists}</h2></div>
        <div class="space"></div>
        <div class="row lot_of_words flex_center not_large">
          <a href="https://allmylinks.com/afalfl"
            ><div class="panel">afalfl</div></a
          >
          <a href="https://azertype.fr"><div class="panel">azertype</div></a>
          <a href="https://raphaelforment.fr"
            ><div class="panel">BuboBubo</div></a
          >
          <a href="https://soundcloud.com/deluge_jules"
            ><div class="panel">déluge</div></a
          >
          <a href="https://soundcloud.com/fronssons"
            ><div class="panel">Fronssons</div></a
          >
          <a href="https://linktr.ee/marlen_b"
            ><div class="panel">Marlen</div></a
          >
          <a href="https://ralt144mi.remigeorges.fr"
            ><div class="panel">Ralt144MI</div></a
          >
        </div>
      </div>
    </div>
    <div class="gui_bottom_center">
      <div class="scroll_cursor">
        <a href="#games" class="linkless">
          <img
            class="moving_cursor"
            src={`${base}content/image/little_cursor.png`}
          />
        </a>
      </div>
    </div>
  </Slide>

  <Slide id="games" videoSrc={`${base}content/video/games.mp4`}>
    <div class="gui_center">
      <div class="column">
        <div class="panel"><h1>{tr.gamesTitle} Party</h1></div>
        <div class="space"></div>
        <Panel width="800px">
          <p set:html={tr.gamesText} />
        </Panel>
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>
        <div class="panel self_center"><h2>{tr.gameArtists}</h2></div>
        <div class="space"></div>
        <div class="row lot_of_words flex_center not_large">
          <a href="https://playful-machines.com"
            ><div class="panel">Emilie Breslavetz</div></a
          >
          <a href="https://neondelice.xyz"
            ><div class="panel">Léon Denise</div></a
          >
          <a href="https://koltes.digital"
            ><div class="panel">Jonathan Giroux</div></a
          >
          <a href="https://bleuje.com"><div class="panel">Etienne Jacob</div></a
          >
          <a href="https://nusan.fr"
            ><div class="panel">Alice "NuSan" Zanuttini</div></a
          >
        </div>
      </div>
    </div>
    <div class="gui_bottom_center">
      <div class="scroll_cursor">
        <a href="#shader" class="linkless">
          <img
            class="moving_cursor"
            src={`${base}content/image/little_cursor.png`}
          />
        </a>
      </div>
    </div>
  </Slide>

  <Slide id="shader" videoSrc={`${base}content/video/shader.mp4`}>
    <div class="gui_center">
      <div class="column">
        <div class="panel"><h1>{tr.shaderTitle} Party</h1></div>
        <div class="space"></div>
        <Panel width="800px">
          <p set:html={tr.shaderText} />
        </Panel>
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>
        <div class="panel self_center"><h2>{tr.visualArtists}</h2></div>
        <div class="space"></div>
        <div class="row lot_of_words flex_center not_large">
          <a href="https://neondelice.xyz"
            ><div class="panel">Léon Denise</div></a
          >
          <a href="https://adelfaure.net"><div class="panel">Adel Faure</div></a
          >
          <a href="https://bleuje.com"><div class="panel">Etienne Jacob</div></a
          >
          <a href="https://instagram.com/peregrine.viz"
            ><div class="panel">Pérégrine</div></a
          >
        </div>
      </div>
    </div>
    <div class="gui_bottom_center">
      <div class="scroll_cursor">
        <a href="#immersive" class="linkless">
          <img
            class="moving_cursor"
            src={`${base}content/image/little_cursor.png`}
          />
        </a>
      </div>
    </div>
  </Slide>

  <Slide id="immersive" videoSrc={`${base}content/video/immersive.mp4`}>
    <div class="gui_center">
      <div class="column">
        <div class="panel"><h1>{tr.immersiveTitle} Party</h1></div>
        <div class="space"></div>
        <Panel width="800px">
          <p set:html={tr.immersiveText} />
        </Panel>
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>
        <div class="panel self_center"><h2>{tr.immersiveArtists}</h2></div>
        <div class="space"></div>
        <div class="row lot_of_words flex_center not_large">
          <a href="https://neondelice.xyz"
            ><div class="panel">Léon Denise</div></a
          >
          <a href="https://soundcloud.com/deluge_jules"
            ><div class="panel">déluge</div></a
          >
          <a href="https://adelfaure.net"><div class="panel">Adel Faure</div></a
          >
        </div>
      </div>
    </div>
    <div class="gui_bottom_center">
      <div class="scroll_cursor">
        <a href="#made_with" class="linkless">
          <img
            class="moving_cursor"
            src={`${base}content/image/little_cursor.png`}
          />
        </a>
      </div>
    </div>
  </Slide>

  <Slide id="made_with" videoSrc={`${base}content/video/godot.mp4`}>
    <div class="gui_center">
      <div class="column">
        <div class="panel"><h1>{tr.madeWithTitle} Party</h1></div>
        <div class="space"></div>
        <Panel width="800px">
          <p set:html={tr.madeWithText} />
        </Panel>
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>
        <div class="panel self_center"><h2>{tr.software}</h2></div>
        <div class="space"></div>
        <div class="row lot_of_words flex_center not_large">
          <a href="https://godotengine.org/"><div class="panel">Godot</div></a>
          <a href="https://supercollider.github.io/"
            ><div class="panel">SuperCollider</div></a
          >
          <a href="https://openframeworks.cc/"
            ><div class="panel">openFrameworks</div></a
          >
          <a href="https://www.arduino.cc/"><div class="panel">Arduino</div></a>
          <a href="https://obsproject.com/"><div class="panel">OBS</div></a>
          <a href="https://ndi.video/tools/"><div class="panel">NDI</div></a>
          <a href="https://opensoundcontrol.stanford.edu/"
            ><div class="panel">OSC</div></a
          >
          <a href="https://crates.io/crates/strix"
            ><div class="panel">Strix</div></a
          >
          <a href="https://sardine.raphaelforment.fr"
            ><div class="panel">Sardine</div></a
          >
          <a href="https://adelfaure.net/tools/textor/"
            ><div class="panel">Textor</div></a
          >
          <a href="https://inkscape.org/"><div class="panel">Inkscape</div></a>
        </div>
      </div>
    </div>
    <div class="gui_bottom_center">
      <div class="scroll_cursor">
        <a href="#thanks" class="linkless">
          <img
            class="moving_cursor"
            src={`${base}content/image/little_cursor.png`}
          />
        </a>
      </div>
    </div>
  </Slide>

  <Slide id="thanks" videoSrc={`${base}content/video/thanks.mp4`}>
    <div class="gui_bottom_center">
      <div class="column">
        <div class="panel self_center"><h1>{tr.thanks}</h1></div>
        <div class="space"></div>
        <div class="space"></div>
        <Panel width="800px">
          <p>{tr.thanksText}</p>
        </Panel>
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>
      </div>
    </div>
  </Slide>
</BaseLayout>
